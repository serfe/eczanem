<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.serife.eczanem.MainActivity">

    <RelativeLayout
        android:id="@+id/Relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/eczane2"
            android:id="@+id/imageView"
            android:background="#39c4b6b6" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eczanelerin bulunduğu sayfalara buradan ulaşabilirsiniz"
            android:id="@+id/textView"
            android:textColor="#FFD12828"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="#39c4b6b6"
            android:paddingLeft="10dp"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:paddingTop="15dp" />
    </RelativeLayout>




    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#39c4b6b6"
        android:id="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/Relative2">


        <Button
            android:background="@drawable/buttonstyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="tüm eczaneler "
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="setListFooter"
            android:clickable="true"
            android:textColor="#FFD12828"
            android:textSize="10dp"
            android:textStyle="bold"
            android:shadowColor="#6e4d4d"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            />

        <Button
            android:background="@drawable/buttonstyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="İlçelere göre eczaneler"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:onClick="setContentView"
            android:textColor="#FFD12828"
            android:textSize="10dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="15dp"/>

        <Button
            android:background="@drawable/buttonstyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="nöbetçi eczaneler "
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="setContentView"
            android:textColor="#FFD12828"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <Button
            android:background="@drawable/buttonstyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="notlarım "
            android:id="@+id/buttonnot"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="setContentView"
            android:textColor="#FFD12828"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <Button
            android:background="@drawable/buttonstyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Eczaneleri Haritada Görüntüle"
            android:id="@+id/button_harita"
            android:onClick="setContentView"
            android:textColor="#FFD12828"
            android:textSize="10dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>


</RelativeLayout>
